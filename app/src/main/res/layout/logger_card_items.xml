<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" android:id="@+id/llLoggerCards" android:layout_margin="8dp">

    <TextView
            android:layout_width="79dp"
            android:layout_height="wrap_content" android:id="@+id/tvCardSets" android:layout_weight="1"
            android:textSize="20sp" android:gravity="center" android:inputType="none"/>
    <TextView
            android:layout_width="83dp"
            android:layout_height="wrap_content" android:id="@+id/tvCardPounds" android:layout_weight="2"
            android:gravity="center" android:textSize="20sp" android:inputType="none" android:layout_marginLeft="75dp"
    />
    <TextView
            android:layout_width="87dp"
            android:layout_height="match_parent" android:id="@+id/tvCardReps" android:layout_weight="2"
            android:textSize="20sp" android:gravity="center" android:inputType="none"
            android:layout_marginLeft="70dp"/>
</LinearLayout>