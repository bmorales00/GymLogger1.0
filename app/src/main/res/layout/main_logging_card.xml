<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="wrap_content" android:orientation="vertical" android:layout_margin="8dp"
              android:clickable="false"
              android:background="@color/white">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/tvMainActivityTitle"
            android:minHeight="48dp"
            android:padding="10dp" android:inputType="none" android:clickable="false"
            tools:ignore="SpeakableTextPresentCheck" android:textSize="18sp" android:fontFamily="sans-serif-black"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/tvMainActivityInfo"
            android:padding="10dp" android:fontFamily="sans-serif-black"/>
</LinearLayout>